# ==============================================
# Apotek Management System - Environment Configuration
# ==============================================
# Copy this file to .env and update with your actual values

# -----------------------
# Application
# -----------------------
NODE_ENV=development
PORT=3000
APP_NAME="Apotek Management System"

# -----------------------
# Database (PostgreSQL)
# -----------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/apotek_db?schema=public"

# -----------------------
# JWT Authentication
# -----------------------
# IMPORTANT: Generate strong random secrets for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Access Token (15 minutes expiry)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long-change-this"
JWT_EXPIRATION="15m"

# Refresh Token (7 days expiry)
JWT_REFRESH_SECRET="your-super-secret-refresh-key-minimum-32-characters-different-from-jwt-secret"
JWT_REFRESH_EXPIRATION="7d"

# -----------------------
# CORS Configuration
# -----------------------
# Comma-separated list of allowed origins
# Use '*' for development only, specify actual domains for production
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# -----------------------
# Rate Limiting
# -----------------------
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# -----------------------
# Logging
# -----------------------
LOG_LEVEL="debug"

# -----------------------
# Email Configuration (Optional - for password reset)
# -----------------------
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="noreply@apotek.com"

# -----------------------
# Redis (Optional - for caching)
# -----------------------
# REDIS_HOST="localhost"
# REDIS_PORT=6379
# REDIS_PASSWORD=""
# REDIS_DB=0

# -----------------------
# File Upload (Optional)
# -----------------------
# MAX_FILE_SIZE=5242880
# UPLOAD_DEST="./uploads"

# -----------------------
# Frontend URL (for email links)
# -----------------------
FRONTEND_URL="http://localhost:5173"

# -----------------------
# Security
# -----------------------
# Account lockout after failed login attempts
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800000

# Password reset token expiry (1 hour in milliseconds)
PASSWORD_RESET_TOKEN_EXPIRY=3600000
